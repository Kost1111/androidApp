<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myapplication_finalnavigatio.ui.Home.Home"
        android:label="Animal Collections"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home2_to_details"
            app:destination="@id/details"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_navigation_home_to_addAnimal"
            app:destination="@id/addAnimal"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/navigation_favourites"
        android:name="com.example.myapplication_finalnavigatio.ui.Favourite.Favourite"
        android:label="Favourite Animals"
        tools:layout="@layout/fragment_favourite" >
        <action
            android:id="@+id/action_navigation_favourites_to_navigation_home"
            app:destination="@id/navigation_home"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.myapplication_finalnavigatio.ui.Settings.Settings"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/details"
        android:name="com.example.myapplication_finalnavigatio.ui.Details.Details"
        android:label="Details about Animal"
        tools:layout="@layout/fragment_details" />
    <fragment
        android:id="@+id/addAnimal"
        android:name="com.example.myapplication_finalnavigatio.ui.AddAnimal.AddAnimal"
        android:label="fragment_add_animal"
        tools:layout="@layout/fragment_add_animal" >
        <action
            android:id="@+id/action_addAnimal_to_animalPreview"
            app:destination="@id/animalPreview"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_addAnimal_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/animalPreview"
        android:name="com.example.myapplication_finalnavigatio.ui.AnimalPreview.AnimalPreview"
        android:label="fragment_animal_preview"
        tools:layout="@layout/fragment_animal_preview" >
        <action
            android:id="@+id/action_animalPreview_to_navigation_home"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_animalPreview_to_addAnimal"
            app:destination="@id/addAnimal" />
    </fragment>
</navigation>